<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.tonyjhuang.trvphvt.customviews.TrvpHvtPvd
            android:id="@+id/test_pad_1"
            style="@style/TrvpHvtPvd"
            app:toast="1" />

        <com.tonyjhuang.trvphvt.customviews.TrvpHvtPvd
            android:id="@+id/test_pad_2"
            style="@style/TrvpHvtPvd.Alt"
            app:toast="2" />

        <com.tonyjhuang.trvphvt.customviews.TrvpHvtPvd
            android:id="@+id/test_pad_3"
            style="@style/TrvpHvtPvd"
            app:toast="3"/>


        <com.tonyjhuang.trvphvt.customviews.TrvpHvtPvd
            android:id="@+id/test_pad_4"
            style="@style/TrvpHvtPvd.Alt"
            app:toast="4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.tonyjhuang.trvphvt.customviews.TrvpHvtPvd
            android:id="@+id/test_pad_5"
            style="@style/TrvpHvtPvd.Alt"
            app:toast="5"/>

        <com.tonyjhuang.trvphvt.customviews.TrvpHvtPvd
            android:id="@+id/test_pad_6"
            style="@style/TrvpHvtPvd"
            app:toast="6"/>

        <com.tonyjhuang.trvphvt.customviews.TrvpHvtPvd
            android:id="@+id/test_pad_7"
            style="@style/TrvpHvtPvd.Alt"
            app:toast="7"/>

        <com.tonyjhuang.trvphvt.customviews.TrvpHvtPvd
            android:id="@+id/test_pad_8"
            style="@style/TrvpHvtPvd"
            app:toast="8"/>
    </LinearLayout>

</LinearLayout>
